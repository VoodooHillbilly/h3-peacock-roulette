                        {
                            "id": "gamemodes_category_roulette",
                            "view": "menu3.basic.SimpleButtonTile",
                            "nrows": 0.5,
                            "ncols": 2,
                            "pressable": true,
                            "data": {
                                "title": "$loc UI_MENU_PAGE_HUB_ROULETTE",
