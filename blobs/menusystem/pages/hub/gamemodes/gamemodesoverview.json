                                        "accept": {
                                            "link": {
                                                "page": "gamemode_arcade",
                                                "args": {
                                                    "url": "hitscategory",
                                            "type": "Arcade",
                                            "mode": "dataonly"
                                                }
                                            }
                                        }
                                    }
                                },
                                "do": {
                                    "$mergeobjects": [
                                        {
                                            "$include": {
                                                "$path": "menusystem/pages/careermenu/Gamemodestile.JSON"
                                            }
                                        }
                                    ]
                                }
                            }
                        },
                        {
                            "$datacontext": {
                                "in": "$.",
                                "datavalues": {
                                    "Title": "$loc UI_EVERGREEN_TITLE",
                                    "Icon": "evergreen_gamemode",
                                    "image": "$res images/livetile/tile_gamemode_evergreen.jpg",
